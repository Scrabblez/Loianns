<Window x:Class="InstallScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstallScreen"
        mc:Ignorable="d"
        Title="Install" Height="648" Width="1150" FontFamily="Arial" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="images/imgInstallScreen.png"/>
    </Window.Background>
    <Grid>
        <Button x:Name="btnInstall" IsEnabled="True" Content="Install SoulSong Analysis" HorizontalAlignment="Left" Margin="650,400,0,0" VerticalAlignment="Top" Width="350" Height="50" FontFamily="Arial" FontSize="20" FontWeight="Bold" Click="btnInstall_Click_1"/>
        <Button x:Name="btnCancel" IsEnabled="True" Content="Cancel Installation" HorizontalAlignment="Left" Margin="650,500,0,0" VerticalAlignment="Top" Width="350" Height="50" FontFamily="Arial" FontSize="20" FontWeight="Bold"/>
    </Grid>
</Window>
